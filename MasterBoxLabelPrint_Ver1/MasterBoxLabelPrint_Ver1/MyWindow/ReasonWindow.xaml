<Window x:Class="MasterBoxLabelPrint_Ver1.ReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterBoxLabelPrint_Ver1"
        mc:Ignorable="d"
        Title="Reason" Height="270" Width="700" WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="10,5,10,0">
        <Label Content="Tên người thao tác :"/>
        <TextBox x:Name="txt_operator" Padding="5,0,0,0" FontWeight="SemiBold" VerticalContentAlignment="Center" Height="30"/>
        <Label Content="Lý do rework :"/>
        <RichTextBox x:Name="rtb_reason" Padding="0,5,0,0" FontWeight="SemiBold" Height="100" TextBlock.LineHeight="1"/>
        
        <WrapPanel HorizontalAlignment="Center">
            <Button Click="Button_Click" Content="OK" Height="25" Width="100" Margin="0,5,0,0"/>
        </WrapPanel>
        
    </StackPanel>
</Window>
