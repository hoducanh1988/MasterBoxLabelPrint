<UserControl x:Class="MasterBoxLabelPrint_Ver1.MyUserControl.ucRework"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterBoxLabelPrint_Ver1.MyUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="595" d:DesignWidth="985"  Background="White">
  
    <TabControl TabStripPlacement="Bottom">
        <TabControl.Resources>
            <Style TargetType="TabPanel">
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
        </TabControl.Resources>

        <TabItem>
            <TabItem.Header>
                <Label FontSize="14" FontWeight="SemiBold" Content="Small Quantity"/>
            </TabItem.Header>

            <Grid>
                <local:ucRework_SmallQty/>
            </Grid>

        </TabItem>

        <TabItem>
            <TabItem.Header>
                <Label FontSize="14" FontWeight="SemiBold" Content="Bulk Quantity"/>
            </TabItem.Header>

            <Grid>
                <local:ucRework_BulkQty/>
            </Grid>

        </TabItem>




    </TabControl>
    
</UserControl>
